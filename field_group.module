function field_group_attach_groups(&$build, $entity, $display) {
  // dsm('field_group_attach_groups');
  // dvm($display->mode);
  // dsm(field_group_get_field_groups($entity->entityType(), $entity->bundle(), $display->mode));
  // dsm($build);

